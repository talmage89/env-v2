[user]
	name = cage
	email = cage@localhost

[core]
	editor = hx
	hooksPath = ~/.githooks

[init]
	defaultBranch = main

[pull]
	rebase = true

[alias]
	coma = "!git add . && git commit"
	logo = "log --oneline"
	nuke = "!git checkout . && git clean -df"
	reb = "!git fetch && git rebase -i origin/main"
